#!TextGates run

/* built in gates
	AND OR NOT XOR 
*/ 



chip _1bit_full_adder (A, B, C_in) -> (C_out, S) {
	S 	  = (A XOR B) XOR C_in;
	C_out = (A AND B) OR ( C_in AND ( A XOR B));
}


chip _4bit_full_adder (A[4], B[4], C_in) -> (C_out, S[4]) {
	(C1_out, S[1]) = _1bit_full_adder (A[1], B[1], C_in);
	(C2_out, S[2]) = _1bit_full_adder (A[2], B[2], C1_out);
	(C3_out, S[3]) = _1bit_full_adder (A[3], B[3], C2_out);
	(C_out,  S[4]) = _1bit_full_adder (A[4], B[4], C3_out);
}


